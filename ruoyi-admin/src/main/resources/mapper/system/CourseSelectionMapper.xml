<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.CourseSelectionMapper">
    
    <resultMap type="CourseSelection" id="CourseSelectionResult">
        <result property="id"    column="id"    />
        <result property="studentId"    column="student_id"    />
        <result property="courseId"    column="course_id"    />
        <result property="classTime"    column="class_time"    />
    </resultMap>

    <sql id="selectCourseSelectionVo">
        select id, student_id, course_id, class_time from course_selection
    </sql>

    <select id="selectCourseSelectionList" parameterType="CourseSelection" resultMap="CourseSelectionResult">
        <include refid="selectCourseSelectionVo"/>
        <where>  
            <if test="studentId != null  and studentId != ''"> and student_id = #{studentId}</if>
            <if test="courseId != null  and courseId != ''"> and course_id = #{courseId}</if>
            <if test="classTime != null "> and class_time = #{classTime}</if>
        </where>
    </select>
    
    <select id="selectCourseSelectionById" parameterType="Long" resultMap="CourseSelectionResult">
        <include refid="selectCourseSelectionVo"/>
        where id = #{id}
    </select>

    <insert id="insertCourseSelection" parameterType="CourseSelection" useGeneratedKeys="true" keyProperty="id">
        insert into course_selection
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="studentId != null and studentId != ''">student_id,</if>
            <if test="courseId != null and courseId != ''">course_id,</if>
            <if test="classTime != null">class_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="studentId != null and studentId != ''">#{studentId},</if>
            <if test="courseId != null and courseId != ''">#{courseId},</if>
            <if test="classTime != null">#{classTime},</if>
         </trim>
    </insert>

    <update id="updateCourseSelection" parameterType="CourseSelection">
        update course_selection
        <trim prefix="SET" suffixOverrides=",">
            <if test="studentId != null and studentId != ''">student_id = #{studentId},</if>
            <if test="courseId != null and courseId != ''">course_id = #{courseId},</if>
            <if test="classTime != null">class_time = #{classTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteCourseSelectionById" parameterType="Long">
        delete from course_selection where id = #{id}
    </delete>

    <delete id="deleteCourseSelectionByIds" parameterType="String">
        delete from course_selection where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>