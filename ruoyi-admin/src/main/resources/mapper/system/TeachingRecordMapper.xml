<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.TeachingRecordMapper">
    
    <resultMap type="TeachingRecord" id="TeachingRecordResult">
        <result property="id"    column="id"    />
        <result property="employeeId"    column="employee_id"    />
        <result property="courseId"    column="course_id"    />
        <result property="venueId"    column="venue_id"    />
        <result property="classTime"    column="class_time"    />
    </resultMap>

    <sql id="selectTeachingRecordVo">
        select id, employee_id, course_id, venue_id, class_time from teaching_record
    </sql>

    <select id="selectTeachingRecordList" parameterType="TeachingRecord" resultMap="TeachingRecordResult">
        <include refid="selectTeachingRecordVo"/>
        <where>  
            <if test="employeeId != null  and employeeId != ''"> and employee_id = #{employeeId}</if>
            <if test="courseId != null  and courseId != ''"> and course_id = #{courseId}</if>
            <if test="venueId != null  and venueId != ''"> and venue_id = #{venueId}</if>
            <if test="classTime != null "> and class_time = #{classTime}</if>
        </where>
    </select>
    
    <select id="selectTeachingRecordById" parameterType="Long" resultMap="TeachingRecordResult">
        <include refid="selectTeachingRecordVo"/>
        where id = #{id}
    </select>

    <insert id="insertTeachingRecord" parameterType="TeachingRecord" useGeneratedKeys="true" keyProperty="id">
        insert into teaching_record
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="employeeId != null and employeeId != ''">employee_id,</if>
            <if test="courseId != null and courseId != ''">course_id,</if>
            <if test="venueId != null and venueId != ''">venue_id,</if>
            <if test="classTime != null">class_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="employeeId != null and employeeId != ''">#{employeeId},</if>
            <if test="courseId != null and courseId != ''">#{courseId},</if>
            <if test="venueId != null and venueId != ''">#{venueId},</if>
            <if test="classTime != null">#{classTime},</if>
         </trim>
    </insert>

    <update id="updateTeachingRecord" parameterType="TeachingRecord">
        update teaching_record
        <trim prefix="SET" suffixOverrides=",">
            <if test="employeeId != null and employeeId != ''">employee_id = #{employeeId},</if>
            <if test="courseId != null and courseId != ''">course_id = #{courseId},</if>
            <if test="venueId != null and venueId != ''">venue_id = #{venueId},</if>
            <if test="classTime != null">class_time = #{classTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteTeachingRecordById" parameterType="Long">
        delete from teaching_record where id = #{id}
    </delete>

    <delete id="deleteTeachingRecordByIds" parameterType="String">
        delete from teaching_record where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>